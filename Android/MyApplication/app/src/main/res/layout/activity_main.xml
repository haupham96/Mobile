<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="horizontal">
    <!-- 2 - 3- 4- 1 -->

    <LinearLayout
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Welcome to my Realm 1-1"
            android:textColor="#03A9F4"
            android:background="#B3E5FC"
            android:textSize="30sp" />
        <TextView android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Welcome to my Realm 1-2"
            android:textColor="#03A9F4"
            android:background="#B3E5FC"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="1"
            android:gravity="center"
            android:textColor="#E91E63"
            android:background="#FFCDD2"
            android:textSize="30sp" />
        <TextView android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Welcome to my Realm 2"
            android:textColor="#E91E63"
            android:background="#FFCDD2"
            android:textSize="30sp" />
        <TextView android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Welcome to my Realm 2"
            android:textColor="#E91E63"
            android:background="#FFCDD2"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Welcome to my Realm 3"
        android:textColor="#03A9F4"
        android:background="#B3E5FC"
        android:textSize="30sp" />

    <TextView android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Welcome to my Realm 4"
        android:textColor="#E91E63"
        android:background="#FFCDD2"
        android:textSize="30sp" />

</LinearLayout>