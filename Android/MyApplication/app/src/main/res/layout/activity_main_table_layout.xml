<?xml version="1.0" encoding="utf-8"?>
<!-- stretchColumns: dàn đều các column ra -->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:stretchColumns="*"
    >

    <TableRow>

        <!-- Gộp column = layout_span -->
        <TextView
            android:gravity="center"
            android:layout_span="4"
            android:background="#ff0"
            android:text="Hello World 1-1"
            android:textSize="24sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="Hello World 2-1"
            android:textSize="24sp" />

        <TextView
            android:text="Hello World 2-2"
            android:textSize="24sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:text="Hello World 3-1"
            android:textSize="24sp" />

        <TextView
            android:text="Hello World 3-2"
            android:textSize="24sp" />

        <TextView
            android:text="Hello World 3-3"
            android:textSize="24sp" />
        <TextView
            android:text="Hello World 3-4"
            android:textSize="24sp" />
    </TableRow>
</TableLayout>